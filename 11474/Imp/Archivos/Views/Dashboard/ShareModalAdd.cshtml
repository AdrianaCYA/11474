
<div class="modal fade top" id="shareModalAdd" tabindex="-1" role="dialog" aria-labelledby="confirmacionModalLabel" aria-hidden="true" data-backdrop="true">
    <div class="modal-dialog">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>*@
                <h3>Agregar Historia</h3>
            </div>
            <!--Body-->
            <div class="modal-body">
                <div class="well col-md-10 col-md-offset-1">
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <div class="">Division:</div>
                            <select id="selDivision" class="selectAdd form-control">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="">SubDivsion:</div>
                            <select id="selSubDivision" class="selectAdd form-control">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="">Grupo:</div>
                            <select id="selGrupo" class="selectAdd form-control">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div>Familia:</div>
                            <select id="selFamilia" class="selectAdd form-control">
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <div class="">SubFamilia:</div>
                            <select id="selSubFamilia" class="selectAdd form-control">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="">Temporada:</div>
                            <select id="selTemporada" class="selectAdd form-control">
                                @for (var i = 0; i < 4; i++)
                                {
                                    var año = DateTime.Now.Year - 2;
                                    <option value=""></option>
                                    var valor = año + i;
                                    <option value="PRIMAVERA @valor">PRIMAVERA @valor</option>
                                    <option value="VERANO @valor">VERANO @valor</option>
                                    <option value="OTOÑO @valor">OTOÑO @valor</option>
                                    <option value="INVIERNO @valor">INVIERNO @valor</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="">Tipo de talla:</div>
                            <select id="selTipoTalla" class="selectAdd form-control">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label></label>
                            <button id="clearEC" class="form-control col-md-offset-9"><span class="glyphicon glyphicon-erase"></span></button>
                        </div>
                    </div>
                </div>
                <div id="tablaShare">
                    <table class="table table-striped" id="tablaShareAdd">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Talla</th>
                                <th scope="col">Share</th>
                            </tr>
                        </thead>
                        <tbody id="tablaShareAdd"></tbody>
                        <tfoot id="tablaShareAdd">
                        </tfoot>
                    </table>
                </div>

            </div>
            <!--Modal Footer-->
            <div class="modal-footer">
                <button type="button" id="" class="btn btn-default CancelarShare" data-dismiss="modal" >Cancelar</button>
                <button type="button" class="btn btn-primary submitBtn" id="AgregarShare">Guardar</button>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
